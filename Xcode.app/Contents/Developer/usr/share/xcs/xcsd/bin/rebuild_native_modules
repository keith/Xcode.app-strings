#!/bin/bash
DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
XCSD_DIR="$DIR/.."
MODULE_DIRS=(
    ""
    "node_modules/nodobjc/node_modules/ffi"
    "node_modules/nodobjc/node_modules/ref"
for module in "${MODULE_DIRS[@]}"; do
    pushd "$XCSD_DIR/$module"
    "$XCSD_DIR/node_modules/.bin/node-gyp" rebuild "$@"
    popd
done
